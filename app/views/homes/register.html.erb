<div class="container container-sm mt-lg home">
  <div class="panel">
    <div class="panel-body">

      <h1 class="mv-lg pv-lg">กรอกรายละเอียดสำหรับติดต่อลุ้นรับของรางวัล</h1>

        <%= form_for :form_register , url: new_register_path do |f| %>

        <div class="form-group">
          <%= f.label "ชื่อผู้ทำแบบสอบถาม" %><br />
          <%= f.text_field :name, autofocus: true , class:'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "เบอร์โทรศัพท์" %><br />
          <%= f.text_field :phone, autofocus: true , class:'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "อาชีพ" %><br />
          <div class="radio c-radio">
             <label>
                <%= f.radio_button(:occupation,  1, required: 'required') %>
                <span class="fa fa-circle"></span>นักเรียน/นักศึกษา (Student)
              </label>
          </div>
          <div class="radio c-radio">
              <label>
                <%= f.radio_button(:occupation,  2, required: 'required') %>
                <span class="fa fa-circle"></span>พนักงานบริษัท (Private Company Staff)
              </label>
            </div>
            <div class="radio c-radio">
              <label>
                <%= f.radio_button(:occupation,  3, required: 'required') %>
                <span class="fa fa-circle"></span>ชุมชน (Local Community)
              </label>
            </div>
            <div class="radio c-radio">
              <label>
                <%= f.radio_button(:occupation,  4, required: 'required') %>
                <span class="fa fa-circle"></span>ข้าราชการ (Government Units’ Officer)
              </label>
            </div>
            <div class="radio c-radio text-xs">
              <label>
                <%= f.radio_button(:occupation,  5, required: 'required') %>
                <span class="fa fa-circle"></span>พนักงานรัฐวิสาหกิจ (State Enterprise Officer)
              </label>
            </div>
            <div class="radio c-radio">
              <label>
                <%= f.radio_button(:occupation,  6, required: 'required') %>
                <span class="fa fa-circle"></span>อื่นๆ (Other)
              </label>
          </div>
        </div>

        <%= f.submit 'ถัดไป', class:'btn btn-green btn-block btn-lg mv-lg pv-lg' %>
      <% end %>

    </div>
  </div>
</div>
