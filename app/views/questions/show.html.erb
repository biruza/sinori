<h3><%= @question.name %>
   <small></small>
</h3>
<div class="container-fluid">
   <!-- START DATATABLE 1 -->
   <div class="row">
      <div class="col-lg-12">
         <div class="panel panel-default">
            <div class="panel-heading">

            </div>
            <div class="panel-body">
               <table class="table table-striped table-hover">
                  <thead>
                     <tr>
                        <th>คำตอบ</th>
                        <th>Action</th>
                     </tr>
                  </thead>
                  <tbody>
                    <% @answer.each do |answer| %>
                     <tr>
                        <td><%= answer.answer.name %></td>
                        <td><%= link_to '<i class="fa fa-trash text-sm m-r-sm"></i>'.html_safe ,question_answer_path(answer.answer.id), class:'btn btn-icon btn-rounded red', method: :DELETE,data:{confirm:'Are you sure ?'} %></td>
                     </tr>
                    <% end %>
                  </tbody>
               </table>


            </div>
         </div>
      </div>
   </div>
   <!-- END DATATABLE 1 -->
