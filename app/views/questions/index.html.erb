<h3>Data Tables
   <small>Tables, one step forward.</small>
</h3>
<div class="container-fluid">
   <!-- START DATATABLE 1 -->
   <div class="row">
      <div class="col-lg-12">
         <div class="panel panel-default">
            <div class="panel-heading">
               Data Tables |
               <small>Zero Configuration</small>
            </div>
            <div class="panel-body">
               <table id="datatable1" class="table table-striped table-hover">
                  <thead>
                     <tr>
                        <th>Question ID</th>
                        <th>คำถาม</th>
                        <th>Action</th>
                     </tr>
                  </thead>
                  <tbody>
                    <% @question.each do |quest| %>
                     <tr class="question_<%= quest.id %>">
                        <td><%= quest.id %></td>
                        <td><%= quest.name %></td>
                        <td class="text-right">
                          <%= link_to '<i class="fa fa-eye text-sm m-r-sm"></i>'.html_safe ,question_path(quest.id), class:'btn btn-icon btn-rounded blue' %>
                          <%= link_to '<i class="fa fa-pencil-square text-sm m-r-sm"></i>'.html_safe ,edit_question_path(quest.id), class:'btn btn-icon btn-rounded green' %>
                          <%= link_to '<i class="fa fa-trash text-sm m-r-sm"></i>'.html_safe ,question_path(quest.id), class:'btn btn-icon btn-rounded red', method: :DELETE,data:{confirm:'Are you sure ?'} %>
                        </td>
                     </tr>
                    <% end %>
                  </tbody>
               </table>
            </div>
         </div>
      </div>
   </div>
   <!-- END DATATABLE 1 -->
