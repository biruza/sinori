<div class="container container-sm mt-lg home">
  <div class="panel">
    <div class="panel-body">

      <h1 class="mv-lg pv-lg">ลงทะเบียน</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "ตั้งรหัสผ่าน" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" , class:'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "ยืนยันการตั้งรหัสผ่าน" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" , class:'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "ชื่อ" %><br />
          <%= f.text_field :first_name, autofocus: true , class:'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "อาชีพ" %><br />
          <div class="radio c-radio">
             <label>
                <%= f.radio_button(:occupation,  1, required: 'required') %>
                <span class="fa fa-circle"></span>นักเรียน/นักศึกษา (Student)
              </label>
          </div>
          <div class="radio c-radio">
              <label>
                <%= f.radio_button(:occupation,  2, required: 'required') %>
                <span class="fa fa-circle"></span>พนักงานบริษัท (Private Company Staff)
              </label>
            </div>
            <div class="radio c-radio">
              <label>
                <%= f.radio_button(:occupation,  3, required: 'required') %>
                <span class="fa fa-circle"></span>ชุมชน (Local Community)
              </label>
            </div>
            <div class="radio c-radio">
              <label>
                <%= f.radio_button(:occupation,  4, required: 'required') %>
                <span class="fa fa-circle"></span>ข้าราชการ (Government Units’ Officer)
              </label>
            </div>
            <div class="radio c-radio text-xs">
              <label>
                <%= f.radio_button(:occupation,  5, required: 'required') %>
                <span class="fa fa-circle"></span>พนักงานรัฐวิสาหกิจ (State Enterprise Officer)
              </label>
            </div>
            <div class="radio c-radio">
              <label>
                <%= f.radio_button(:occupation,  6, required: 'required') %>
                <span class="fa fa-circle"></span>อื่นๆ (Other)
              </label>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "ยืนยันข้อมูล" , class:'btn btn-green btn-block btn-lg mv-lg ' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
