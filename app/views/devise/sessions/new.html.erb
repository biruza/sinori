<div class="container container-sm mt-lg home">
  <div class="panel">
    <div class="panel-body">

      <h1 class="mv-lg pv-lg">เข้าสู่ระบบ</h1>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label 'กรอกอีเมล์' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label 'กรอกรหัสผ่าน' %><br />
            <%= f.password_field :password, autocomplete: "off" , class:'form-control' %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label 'จดจำการเข้าสู่ระบบ' %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "เข้าสู่ระบบ", class:'btn btn-green btn-block btn-lg mv-lg ' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
